<h1>Informes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Fecha entrega</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @investigations.each do |investigation| %>
      <tr>
        <td><%= investigation.nombre %></td>
        <td><%= investigation.descripcion %></td>
        <td><%= investigation.fecha_entrega %></td>
        <td><%= investigation.user.email %></td>
        <td><%= link_to 'Show', investigation %></td>
        <td><%= link_to 'Edit', edit_investigation_path(investigation) %></td>
        <td><%= link_to 'Destroy', investigation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

