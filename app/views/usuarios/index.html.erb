<section class="content">
      <div class="row">
        <div class="col-xs-12">    
      <!-- Content Header (Page header) -->
                <div class="box">
            <div class="box-header">
              <h3 class="box-title">Usuarios</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                      <th>Nombre</th>
                      <th>Apellido</th>
                      <th>Email</th>
                      <th>Rol</th>
                      <th>Acciones</th>
                     </tr>
                </thead>
                  <tbody>
              <% @users.each do |usuario| %>
     
                   <tr>

                     <td><%= usuario.name %></td>
                     <td><%= usuario.last_name %></td>
                     <td><%= usuario.email %></td>
                     <td><%= usuario.roles.pluck(:name).join(",")%></td>
                     <td><%= usuario.roles.name%></td>
                     <td>
                     <%if can? :read, usuario%>
                        <%= link_to usuario_path(usuario) do %>
                          <i class="fa fa-fw fa-eye"></i>
                        <%end%>
                     <%end%>
                     <%if can? :update, usuario%>
                        <%= link_to edit_usuario_path(usuario) do %>
                          <i class="fa fa-fw fa-pencil-square-o"></i>
                       <%end%>
                     <%end%>
                     <%if cannot? :destroy,usuario%>
                        <%= link_to usuario_path(usuario), method: :delete, data: { confirm: 'Are you sure?'} do %>
                          <i class="fa fa-fw fa-remove"></i>
                        <%end%>
                     <%end%>
                    </td>
                   </tr>
              <% end %>                  
               </tbody>
                <tfoot>
                <tr>
                      <th>Nombre</th>
                      <th>Apellido</th>
                      <th>Email</th>
                      <th>Rol</th>
                      <th>Acciones</th>                 

                </tr>
                </tfoot>
              </table>
            </div>


            <!-- /.box-body -->
          </div>
          
<%if can? :create,current_user%>
<%= link_to new_usuario_path do %>
<button class="btn btn-primary" type="submit">Agregar Usuario</button>
<%end%>
<%end%>

          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>

<script>
  $(function () {
    $('#example1').DataTable()
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
</script>


