<p id="notice"><%= notice %></p>

<h1>Universitarios</h1> 
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">    
      <!-- Content Header (Page header) -->
                <div class="box">
            <div class="box-header">
              <h3 class="box-title">Universitarios</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Apellido</th>
                  <th>CI</th>
                  <th>Correo</th>
                  <th>Horas de Extension</th>
                  <th>Carrera</th>
                </tr>
                </thead>
                  <tbody>
                    <% @universitarios.each do |universitario| %>
                      <tr>
                        <td><%= universitario.nombre %></td>
                        <td><%= universitario.apellido %></td>
                        <td><%= universitario.ci %></td>
                        <td><%= universitario.correo %></td>
                        <td><%= universitario.cant_horas %></td>
                        <td><%= universitario.carrera.nombre %></td>
                        <td><%= link_to 'Show', universitario %></td>
                        <td><%= link_to 'Edit', edit_universitario_path(universitario) %></td>
                        <td><%= link_to 'Destroy', universitario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                <tfoot>
                <tr>
                  <th>Nombre</th>
                  <th>Apellido</th>
                  <th>CI</th>
                  <th>Correo</th>
                  <th>Horas de Extension</th>
                  <th>Carrera</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>

<script>
  $(function () {
    $('#example1').DataTable()
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
</script>
